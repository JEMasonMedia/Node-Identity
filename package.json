    "Authorization",
    "Authentication",
    "Server"
  ],
  "author": "JEMasonMedia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JEMasonMedia/Node-Identity/issues"
  },
  "homepage": "https://github.com/JEMasonMedia/Node-Identity#readme",
  "dependencies": {
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "moment": "^2.29.1",
    "mongoose": "^6.2.8",
