{
  "name": "node-identity",
  "version": "0.0.1",
  "description": "A library for authentication/authorization for the Node environment.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon index",
    "client": "cd client && npm start",
